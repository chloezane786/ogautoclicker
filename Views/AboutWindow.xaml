<Window x:Class="OGAutoClicker.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Topmost="true"
        ResizeMode="CanMinimize"
        Height="150" Width="250"
        Background="#23272A"
        Icon="{StaticResource AboutIcon}">
    <DockPanel>
        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Foreground="White">
            <Run Name="AboutInformationText"/>
            <LineBreak/>
            <Run Name="AuthorText" Text="Created with ❤️ by OG"/>
            <LineBreak/>
            <LineBreak/>
            <Hyperlink TextDecorations="{x:Null}" NavigateUri="https://ogautoclicker.com/help" RequestNavigate="Hyperlink_RequestNavigate" ToolTip="Help @ OG Auto Clicker"><Image Source="/OGAutoClicker;component/Resources/Icons/help.png" Width="21" Height="19" Margin="5,0,0,0"/></Hyperlink>
            <Hyperlink NavigateUri="https://ogautoclicker.com/help" RequestNavigate="Hyperlink_RequestNavigate" ToolTip="Help @ OG Auto Clicker" TextDecorations="{x:Null}" FontSize="15" Foreground="#4a46fb" FontWeight="Bold"><TextBlock Margin="0,-3.5,0,0">Help</TextBlock></Hyperlink>
        </TextBlock>

    </DockPanel>

</Window>
